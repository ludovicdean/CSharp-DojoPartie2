@model TpModule6Bo.Samourai

@{
    ViewBag.Title = "Details";
}

<h2>Détails</h2>

<div>
    <h4>Samourai</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Force)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Force)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Nom)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nom)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Arme)
        </dt>

        <dd>
            @if (Model.Arme != null)
            {
                @Html.DisplayFor(model => model.Arme.Nom)
            }
            else
            {
                <div>Il/Elle n'a pas d'arme</div>
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ArtMartials)
        </dt>

        <dd>
            @if (Model.ArtMartials != null)
            {
                foreach (var artMartial in Model.ArtMartials)
                {
                    @Html.DisplayFor(model => artMartial.Nom)
                    <br />
                }
            }
            else
            {
                <div>Il/Elle n'a pas d'arts martiaux</div>
            }

        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Potentiel)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Potentiel)
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Modifier", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Retour à la liste", "Index")
</p>
